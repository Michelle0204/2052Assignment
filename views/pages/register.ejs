<body>
    <%- include('../partials/nav') %>

        <div>
            <div class="col-12 mid">
                <div class="p-card size">
                    <div class="p-card__content font">
                        <form method="post" action="/register">
                            <fieldset>
                                <label for="firstname">First name</label>
                                <input placeholder="Joe" id="list-input-1" name="firstname" type="text"
                                    autocomplete="given-name">

                                <label for="surname">Last name</label>
                                <input placeholder="Bloggs" id="list-input-2" name="surname" type="text"
                                    autocomplete="family-name">

                                <label for="username">username</label>
                                <input placeholder="username" id="usernameInput" name="username" type="text">

                                <label for="email">Email address</label>
                                <input placeholder="example@canonical.com" id="email" name="email" type="email">

                                <label for="password">Password</label>
                                <input type="password" id="exampleInputPassword1" name="password" placeholder="******">

                                <button type="submit" name="submit">Submit</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>



</body>