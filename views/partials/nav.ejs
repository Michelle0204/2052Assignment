<header id="navigation" class="p-navigation">

    <div class="p-navigation__row--full-width max">
        <div class="p-navigation__banner max">
            <a class="p-navigation__link" href='/menu'>
                <img class="p-navigation__logo-icon" href='/menu' src="/img/pokeball.png" alt="">
                <span class="p-navigation__logo-name">Trade The Card</span>
            </a>
        </div>
        <a href="#navigation" class="p-navigation__toggle--open right" title="menu">Menu</a>
            <a href="#navigation-closed" class="p-navigation__toggle--close" title="close menu">Close menu</a>
        <nav class="p-navigation__nav" aria-label="Example main">
            <ul class="p-navigation__items">
                <li class="p-navigation__item is-selected">
                    <a class="p-navigation__link" href='/menu'>Home</a>
                </li>
                <li class="p-navigation__item">
                    <a class="p-navigation__link" href="/cards">Card Collection</a>
                </li>
                <li class="p-navigation__item">
                    <a class="p-navigation__link" href="/addCard">Add New Card</a>
                </li>
                <li class="p-navigation__item">
                    <a class="p-navigation__link" href="/register">Sign Up</a>
                </li>
            </ul>
            
        </nav>


        <% if (loggedIn) { %>
            <div>
                <a class="p-button_login end" href="/profile"><%= username %></a>
                <a class="p-button_login end" href="/logout">Log Out</a>
            </div>
        <% } else { %>
            <div>
                <a class="p-button_login end" href="/login">login</a>
            </div>
        <% } %>

    </div>
</header>

